<script>
  const fullDate = new Date();
  const fullDateDisplay = document.querySelector("#my-time-full-date");
  const hoursDisplay = document.querySelector("#my-time-hours");
  const localeDisplay = document.querySelector("#my-time-locale");

  if (fullDateDisplay) {
    fullDateDisplay.innerHTML = fullDate.toDateString();
  }

  if (hoursDisplay) {
    hoursDisplay.innerHTML = fullDate.toTimeString();
  }

  const locale = new Intl.Locale("en-US");
  if (localeDisplay) {
    localeDisplay.innerHTML = locale.getTimeZones();
  }
</script>
